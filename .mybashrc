function gvim {
  TMP=$TEMP
  files=
  opt=
  for f in $*
  do
    if [ -f "$f" ]; then
      files+=" `cygpath -d $*`"
    else
      opt+=" $f"
    fi
  done
  $gvim $opt $files &
}
