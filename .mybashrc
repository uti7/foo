php="$mnt_root/c/pleiades/xampp/php/php.exe"
function php {
  TMP=$TEMP
  files=
  opt=
  for f in $*
  do
    if [ -f "$f" ]; then
      files+=" `wp $f`"
    else
      opt+=" $f"
    fi
  done
  $php $opt $files
}

function gvim {
  TMP=$TEMP
  files=
  opt=
  for f in $*
  do
    if [ -f "$f" ]; then
      files+=" `wp $f`"
    else
      opt+=" $f"
    fi
  done
  $gvim $opt $files &
}
